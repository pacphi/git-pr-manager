# Multi-Gitter Pull-Request Automation Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here

# GitLab Configuration
GITLAB_TOKEN=your_gitlab_personal_access_token_here

# Bitbucket Configuration
BITBUCKET_USERNAME=your_bitbucket_username_here
BITBUCKET_APP_PASSWORD=your_bitbucket_app_password_here
BITBUCKET_WORKSPACE=your_bitbucket_workspace_here

# Notification Configuration (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Email Configuration (Optional)
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password_or_app_password
EMAIL_RECIPIENT=recipient@example.com  # Optional, defaults to EMAIL_USERNAME

# Configuration
CONFIG_FILE=config.yaml

# Debug and Testing
# DRY_RUN=true
# FORCE=false
# OUTPUT_FORMAT=table